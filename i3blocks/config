min_width=80
signal=2

[pacman-updates]
command=python /home/juan/.config/i3blocks/pac-update.py
markup=pango
interval=1
QUIET=true
WATCH=^linux.* ^pacman.* ^emacs.*
BASE_COLOR=#5fff5f
UPDATE_COLOR=#FFFF85
AUR=true
LABEL= 
signal=3

[spotify]
command=python /home/juan/.config/i3blocks/spotify.sh
interval=3
markup=pango
color=#1ED760
border=#1ED760


[cpu]
